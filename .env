# ==========================================================================
# InternVL Configuration - Simplified Structure
# ==========================================================================
# Reduced from 69+ variables to 14 essential variables
# Uses absolute paths for reliable configuration

# --------------------------------------------------------------------------
# CORE CONFIGURATION
# --------------------------------------------------------------------------
# Environment type (discovery, staging, production)
INTERNVL_ENV=discovery


# Model path
INTERNVL_MODEL_PATH=/home/jovyan/nfs_share/models/InternVL3-8B

# --------------------------------------------------------------------------
# PATH CONFIGURATION - Absolute Paths
# --------------------------------------------------------------------------
# All paths are absolute for reliable configuration
INTERNVL_INPUT_PATH=/home/jovyan/nfs_share/tod/data
INTERNVL_OUTPUT_PATH=/home/jovyan/nfs_share/tod/output
INTERNVL_IMAGE_FOLDER_PATH=${INTERNVL_INPUT_PATH}/examples
INTERNVL_PROMPTS_PATH=./prompts.yaml

# Dataset subdirectories (derived from INPUT_PATH)
INTERNVL_SYNTHETIC_DATA_PATH=${INTERNVL_INPUT_PATH}/synthetic
INTERNVL_SROIE_DATA_PATH=${INTERNVL_INPUT_PATH}/sroie

# --------------------------------------------------------------------------
# PROCESSING CONFIGURATION
# --------------------------------------------------------------------------
# Prompt template to use from prompts.yaml
INTERNVL_PROMPT_NAME=key_value_receipt_prompt

# Image processing parameters
INTERNVL_IMAGE_SIZE=448
INTERNVL_MAX_TILES=8

# Inference configuration
INTERNVL_MAX_WORKERS=6
INTERNVL_MAX_TOKENS=2048

# --------------------------------------------------------------------------
# OPTIONAL FEATURES
# --------------------------------------------------------------------------
# HuggingFace offline mode (prevents unwanted downloads)
HF_DATASETS_OFFLINE=1
TRANSFORMERS_OFFLINE=1

# ATO compliance checking
INTERNVL_COMPLIANCE_CHECK=true

# Suppress transformers warnings
INTERNVL_TRANSFORMERS_LOG_LEVEL=ERROR